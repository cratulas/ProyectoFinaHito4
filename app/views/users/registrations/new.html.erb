<div class="container-fluid new">
  <div class="container p-4 text-right">
    <h2 class='py-3'>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      
      <div class="field">
        <%= f.label :email, class: ""%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-info"  %>
      </div>
    
      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username , class: "bg-info"%>
      </div>
    
      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name , class: "bg-info"%>
      </div>
    
      <div class="field">
        <%= f.label :last_name%><br />
        <%= f.text_field :last_name , class: "bg-info"%>
      </div>
    
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "bg-info" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-info"%>
      </div>
    
      <div class="field"><br />
        <%= f.label :photo, "Sube una foto de perfil" %><br />
        <%= f.file_field :photo %>
      </div>
    
      <div class="actions mb-4"><br />
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    
    <%= render "users/shared/links" , class: 'text-dark'%>

  </div>
</div>